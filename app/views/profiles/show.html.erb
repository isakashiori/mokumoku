<%= form_with(model: @user, url: profile_path(@user)) do |f| %>
        <div class="mb-3">
          <%= f.label :name, class: 'form-label' %>
          <%= @user.name %>
        </div>
        <div class="mb-3">
          <%= f.label :hobby, class: 'form-label' %>
          <%= @user.hobby %>
        </div>
        <div class="mb-3">
          <%= f.label :profile, class: 'form-label' %>
          <%= @user.profile %>
        </div>
<% end %>
<% if @user.is_followed_by?(current_user) %>
    <%= link_to 'フォローを外す', user_relationships_path(@user), method: :delete %>
<% else %>
    <%= link_to 'フォローする', user_relationships_path(@user), method: :post %>
<% end %>