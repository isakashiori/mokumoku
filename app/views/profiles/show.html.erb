<div class="mb-3">
  <%= @user.name %>
</div>
<div class="mb-3">
  <%= @user.hobby %>
</div>
<div class="mb-3">
  <%= @user.profile %>
</div>
<% if @user.is_followed_by?(current_user) %>
    <%= link_to 'フォローを外す', user_relationships_path(@user), method: :delete %>
<% else %>
    <%= link_to 'フォローする', user_relationships_path(@user), method: :post %>
<% end %>